<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="377dp"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/frameLayout6"
            android:layout_marginLeft="4dp"
            android:visibility="gone">
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:paddingLeft="25dp"
                android:text=" Airing Today"
                android:textColor="#000"
                android:id="@+id/airingtoday"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/popular"
                android:layout_alignParentRight="true"
                android:text="View All->"
                android:textSize="20sp"
                android:id="@+id/airingtoday_view"
                android:textColor="@color/green"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/airingtoday_recycler"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout6"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="377dp"
            android:layout_height="36dp"
            android:layout_marginLeft="4dp"
            app:layout_constraintTop_toBottomOf="@+id/airingtoday_recycler"
            android:layout_marginTop="10dp"
            android:id="@+id/frameLayout7"
            android:layout_marginStart="4dp"
            android:visibility="gone">
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:paddingLeft="25dp"
                android:id="@+id/populartv"
                android:text="Popular "
                android:textColor="#000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/populartv"
                android:layout_alignParentRight="true"
                android:text="View All->"
                android:textSize="20sp"
                android:id="@+id/populartv_view"
                android:textColor="@color/green"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout7"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/popular_recycler"
            android:layout_marginTop="11dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="377dp"
            android:layout_height="36dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/frameLayout8"
            app:layout_constraintTop_toBottomOf="@+id/popular_recycler"
            android:layout_marginTop="15dp"
            android:layout_marginStart="4dp"
            android:visibility="gone">
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:paddingLeft="25dp"
                android:text="Top Rated "
                android:textColor="#000"
                android:id="@+id/topratedtv"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/topratedtv"
                android:layout_alignParentRight="true"
                android:text="View All->"
                android:textSize="20sp"
                android:id="@+id/topratedtv_view"
                android:textColor="@color/green"/>
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/topratedtv_recycler"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout8"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="377dp"
            android:layout_height="36dp"
            android:layout_marginLeft="4dp"
            android:id="@+id/frameLayout9"
            app:layout_constraintTop_toBottomOf="@+id/topratedtv_recycler"
            android:layout_marginTop="15dp"
            android:layout_marginStart="4dp"
            android:visibility="gone">
            <TextView
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:paddingLeft="25dp"
                android:text="On The Air "
                android:textColor="#000"
                android:id="@+id/nowplayingtv"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/nowplayingtv"
                android:layout_alignParentRight="true"
                android:text="View All->"
                android:textSize="20sp"
                android:id="@+id/nowplayingtv_view"
                android:textColor="@color/green" />
        </RelativeLayout>
        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/nowplayingtv_recycler"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout9"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:visibility="gone"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:id="@+id/progressbartv"
            android:layout_marginTop="180dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</ScrollView>
