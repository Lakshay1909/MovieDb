<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/frameLayout2"
        android:layout_marginStart="4dp"
        android:visibility="gone">
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:paddingLeft="25dp"
            android:text="Popular Movies"
            android:textColor="#000"
            android:id="@+id/popular"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/popular"
            android:layout_alignParentRight="true"
            android:text="View All->"
            android:textSize="20sp"
            android:id="@+id/popular_view"
            android:textColor="@color/green"/>
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/popularmovies"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toBottomOf="@+id/popularmovies"
        android:layout_marginTop="10dp"
        android:id="@+id/frameLayout3"
        android:layout_marginStart="4dp"
        android:visibility="gone">
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:paddingLeft="25dp"
            android:id="@+id/Upcoming"
            android:text="Upcoming Movies"
            android:textColor="#000"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/Upcoming"
            android:layout_alignParentRight="true"
            android:text="View All->"
            android:textSize="20sp"
            android:id="@+id/upcoming_view"
            android:textColor="@color/green"/>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/upcomingmovies"
        android:layout_marginTop="11dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/frameLayout4"
        app:layout_constraintTop_toBottomOf="@+id/upcomingmovies"
        android:layout_marginTop="15dp"
        android:layout_marginStart="4dp"
        android:visibility="gone">
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:paddingLeft="25dp"
            android:text="Top Rated Movies"
            android:textColor="#000"
            android:id="@+id/toprated"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/toprated"
            android:layout_alignParentRight="true"
            android:text="View All->"
            android:textSize="20sp"
            android:id="@+id/toprated_view"
            android:textColor="@color/green"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/topratedmovies"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout4"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/frameLayout5"
        app:layout_constraintTop_toBottomOf="@+id/topratedmovies"
        android:layout_marginTop="15dp"
        android:layout_marginStart="4dp"
        android:visibility="gone">
        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:paddingLeft="25dp"
            android:text="Now Playing Movies"
            android:textColor="#000"
            android:id="@+id/nowplaying"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nowplaying"
            android:layout_alignParentRight="true"
            android:text="View All->"
            android:textSize="20sp"
            android:id="@+id/nowplaying_view"
            android:textColor="@color/green" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/nowplayingmovies"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout5"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:visibility="gone"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:id="@+id/progressbar"
        android:layout_marginTop="180dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>

</ScrollView>
